<div class="announcement" {{ block.shopify_attributes }}>
  <div class="announcement__wrapper relative overflow-hidden">
    <div
      class="announcement__content flex transition-transform ease-in-out duration-300 transform"
      role="region"
      aria-label="{{ 'sections.header.announcement' | t }}"
    >
      {% for block in section.blocks %}
        {%- if block.settings.text != blank -%}
          <div class="announcement__item flex-shrink-0 w-full sm:w-auto px-4">
            {%- if block.settings.link != blank -%}
              <a href="{{ block.settings.link }}" class="announcement__link">
            {%- endif -%}
            <p class="announcement__message">
              <span>{{ block.settings.text | escape }}</span>
            </p>
            {%- if block.settings.link != blank -%}
              </a>
            {%- endif -%}
          </div>
        {%- endif -%}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Announcement Bar",
  "class": "shopify-announcement",
  "settings": [
    {
      "type": "range",
      "id": "animation_duration",
      "label": "Animation duration",
      "min": 0,
      "max": 10,
      "step": 1,
      "default": 4,
      "unit": "s"
    }
  ],
  "blocks": [
    {
      "name": "Text",
      "type": "text",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "placeholder": "Text"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Announcement Bar"
    }
  ]
}
{% endschema %}

<style>
  .announcement__content.translate-x-full { transform: translateX(-100%); }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const announcementContent = document.querySelector('.announcement__content');
    setInterval(() => {
      announcementContent.classList.toggle('translate-x-full');
    }, {{ section.settings.animation_duration | times: 1000 }});
  });
</script>
