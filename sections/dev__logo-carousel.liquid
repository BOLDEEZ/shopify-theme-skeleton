<style>

@keyframes slide {
  from {
    transform: translateX(0);
  }

  to {
    transform: translateX(-100%);
  }
}

.logos:hover .logos-slide {
  animation-play-state: paused;
}

.logos-slide {
  animation: 5s slide infinite linear;
}

{% comment %} .logos-slide img {
  margin: 0 40px;
} 
 {% endcomment %}
{% comment %}  @media screen and (max-width: 768px) {

    .logos-slide img {
      height: 40px;
      width:auto;
      margin: 0 20px;
      z-index:1;
    }
  }
 {% endcomment %}
</style>

<div class="logos {{ section.settings.style--logos }} {{ section.settings.style--logo-before-properties }} {{ section.settings.style--logo-after-properties }}  ">
  

 {% comment %}  {% capture sizes %}(max-width: {{ section.settings.logo_width | times: 2 }}px) 50vw, {{ section.settings.logo_width }}px{% endcapture %}
  {% capture widths %}{{ section.settings.logo_width }}, {{ section.settings.logo_width | times: 1.5 | round }}, {{ section.settings.logo_width | times: 2 }}{% endcapture %}  {% endcomment %}

  {% comment %} {% assign sizes = "(max-width: " | append: section.settings.logo_width | times: 2 | append: "px) 50vw, " | append: section.settings.logo_width | append: "px" %}
  {% assign widths = section.settings.logo_width | append: ", " | append: section.settings.logo_width | times: 1.5 | round | append: ", " | append: section.settings.logo_width | times: 2 %} {% endcomment %}

  {% assign logo_image_classes = "logos__image " | append: section.settings.logos__image %}

  {% for block in section.blocks %}
    {% if block.settings.logo != blank %}
      <div class="logos__slide {{ section.settings.style--logo-slide }}">
            
            {{
              block.settings.logo
              | image_url: width: 200
              | image_tag:
                width: section.settings.logo_width,
                widths: section.settings.logo_widths,
                alt: block.settings.logo_alt,
                sizes: section.settings.logo_sizes,
                class: logo_image_classes
            }}
      </div>
    {% endif %}
  {% endfor %}

  {% for block in section.blocks %}
    {% if block.settings.logo != blank %}
      <div class="logos__slide {{ section.settings.style--logo-slide }}">
            
            {{
              block.settings.logo
              | image_url: width: 200
              | image_tag:
                width: section.settings.logo_width,
                widths: section.settings.logo_widths,
                alt: block.settings.logo_alt,
                sizes: section.settings.logo_sizes,
                class: logo_image_classes
            }}
      </div>
    {% endif %}
  {% endfor %}
</div>

{% schema %}
{
  "name": "Logo Carousel",
  "class": "shopify-brand-carousel",
  "settings": [
    {
      "type": "range",
      "id": "logo_width",
      "min": 0,
      "max": 100,
      "step": 10,
      "default": 50,
      "unit": "px",
      "label": "Set Logo width"
    },
    {
      "type": "header",
      "content": "Tailwind Styling Classes"
    },
    {
      "type": "text",
      "label": "Logo Widths",
      "id": "logo_widths",
      "default": "200, 300, 400"
    },
    {
      "type": "text",
      "label": "Logo Sizes",
      "id": "logo_sizes",
      "default": "(max-width: 300px) 50vw, 50px"
    },
    {
      "type": "text",
      "label": "Style Logo Image",
      "id": "logos__image",
      "default": "h-[40px] w-[auto] mx-[20px] my-[0] md:mx-[40px] md:my-[0]"
    },
    {
      "type": "text",
      "id": "style--logos",
      "label": "Style Logo Container",
      "default": "py-[10px] bg-white overflow-hidden whitespace-nowrap relative"
    },
    {
      "type": "textarea",
      "id": "style--logo-before-properties",
      "label": "Style Logo's Before Properties",
      "default": "before:absolute before:top-0 before:w-[200px] md:before:w-[250px] before:h-full before:content-[''] before:z-10 before:left-0 before:bg-gradient-to-l from-transparent to-white"
    },
    {
      "type": "textarea",
      "id": "style--logo-after-properties",
      "label": "Style Logo's After Properties",
      "default": "after:absolute after:top-0 after:w-[200px] md:after:w-[250px] after:h-full after:content-[''] after:z-10  after:right-0 after:bg-gradient-to-r from-transparent to-white"
    },
    {
      "type": "text",
      "id": "style--logo-slide",
      "label": "Style Logo Slide",
      "default": "inline-block md:mx-3"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "logo",
          "label": "Logo",
          "info": "Select the logo image"
        },
        {
          "type": "text",
          "id": "logo_alt",
          "label": "Alt Text",
          "placeholder": "Alt text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Logo Carousel"
    }
  ]
}
{% endschema %}
