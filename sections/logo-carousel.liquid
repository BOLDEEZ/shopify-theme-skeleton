<style>
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  background: #f2f2f2;
}

@keyframes slide {
  from {
    transform: translateX(0);
  }
  to {
    transform: translateX(-100%);
  }
}

.logos {
  overflow: hidden;
  padding: 20px 0;
  background: white;
  white-space: nowrap;
  position: relative;
}

.logos:before,
.logos:after {
  position: absolute;
  top: 0;
  width: 250px;
  height: 100%;
  content: "";
  z-index: 2;
}

.logos:before {
  left: 0;
  background: linear-gradient(to left, rgba(255, 255, 255, 0), white);
}

.logos:after {
  right: 0;
  background: linear-gradient(to right, rgba(255, 255, 255, 0), white);
}

.logos:hover .logos-slide {
  animation-play-state: paused;
}

.logos-slide {
  display:inline-block;
  animation: 6s slide infinite linear;
}

.logos-slide img {
  height: 50px;
  margin: 0 40px;
}

/* Responsive Styles */
@media screen and (max-width: 768px) {

    .logos:before,
    .logos:after {
        position: absolute;
        top: 0;
        width: 200px;
        height: 100%;
        content: "";
        z-index: 2;
    }

    .logos-slide img {
        height: 40px;
        margin: 0 20px;
    }
}
</style>


<div class=logos>
  {% for block in section.blocks %}
  <div class="logos-slide">
           {{ block.settings.logo | image_url : width: 50 | image_tag }}
  </div>
  {% endfor %}

  {% for block in section.blocks %}
  <div class="logos-slide">
           {{ block.settings.logo | image_url : width: 50 | image_tag }}
  </div>
  {% endfor %}
</div>

{% schema %}
{
  "name": "Logo Carousel",
  "class": "shopify-brand-carousel",
  "blocks": [
    {
      "type": "image",
      "name": "Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "logo",
          "label": "Logo",
          "info": "Select the logo image"
        },
        {
          "type": "text",
          "id": "alt_text",
          "label": "Alt Text",
          "placeholder": "Alt text for accessibility"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Logo Carousel"
    }
  ]
}
{% endschema %}
