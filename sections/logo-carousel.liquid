{% schema %}
{
  "name": "Infinite Logo Carousel",
  "settings": []
}
{% endschema %}

{% stylesheet %}
  <style>
    #logo-carousel {
      overflow: hidden;
      white-space: nowrap;
    }

    .logo-wrapper {
      display: inline-block;
      margin-right: 20px; /* Adjust as needed */
      transition: transform 0.5s ease-in-out;
    }
  </style>
{% endstylesheet %}

{% javascript %}
<script>
  document.addEventListener('DOMContentLoaded', function () {
    const carousel = document.getElementById('logo-carousel');
    const logos = document.querySelectorAll('.logo-wrapper');

    let currentIndex = 0;

    function updateCarousel() {
      const offset = -currentIndex * logos[0].offsetWidth;
      carousel.style.transform = `translateX(${offset}px)`;
    }

    function nextSlide() {
      currentIndex = (currentIndex + 1) % logos.length;
      updateCarousel();
    }

    setInterval(nextSlide, 2000); // Adjust the interval as needed (in milliseconds)
  });
</script>
{% endjavascript %}

<div id="logo-carousel">
  {% assign logos = 'logo1.jpg,logo2.jpg,logo3.jpg,logo4.jpg,logo5.jpg' | split: ',' %}
  {% for logo in logos %}
    <div class="logo-wrapper"><img src="{{ logo }}" alt="Logo"></div>
  {% endfor %}
</div>
