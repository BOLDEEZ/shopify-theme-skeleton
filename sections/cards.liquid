
{% assign total_cards = section.settings.total_cards | default: 6 %}
{% assign cards_per_row = section.settings.cards_per_row | default: 3 %}
{% assign cards_per_column = total_cards / cards_per_row | round %}

<div class="discount-cards-container">
  {% for i in (1..total_cards) %}
    <div class="discount-card {% if i <= cards_per_row %}top-row{% endif %}">
      <img src="card{{ i }}.jpg" alt="Card {{ i }}" class="card-image">
      <h2 class="card-title">Discount Card {{ i }}</h2>
      <p class="card-details">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla quam velit, vulputate eu pharetra nec, mattis ac neque.</p>
      <a href="#" class="card-link-button">Shop Now</a>
    </div>
    {% if i % cards_per_row == 0 and i < total_cards %}
      </div><div class="discount-cards-container">
    {% endif %}
  {% endfor %}
</div>

{% schema %}
{
  "name": "Discount Cards",
  "settings": [
    {
      "type": "header",
      "content": "Discount Cards Settings"
    },
    {
      "type": "text",
      "label": "Total Cards",
      "id": "total_cards",
      "default": "6"
    },
    {
      "type": "text",
      "label": "Cards per Row",
      "id": "cards_per_row",
      "default": "3"
    }
  ],
  "presets": [
    {
      "name": "Default",
      "category": "Custom"
    }
  ]
}
{% endschema %}