<div class="multi-card-section">
  <h2 class="section-title">{{ section.settings.section_title | default: "Featured Cards" }}</h2>

  <div class="cards-container">
    {% for card in section.settings.cards %}
      <div class="card">
        <img src="{{ card.image | img_url: 'medium' }}" alt="{{ card.title }}">
        <h3>{{ card.title }}</h3>
        <p>{{ card.details }}</p>
        <a href="{{ card.button_url }}" class="btn">{{ card.button_text }}</a>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Multi-Card Section",
  "settings": [
    {
      "type": "header",
      "content": "Multi-Card Section Settings"
    },
    {
      "type": "text",
      "label": "Section Title",
      "id": "section_title",
      "default": "Featured Cards"
    },
    {
      "type": "image_picker",
      "label": "Card 1 Image",
      "id": "image1"
    },
    {
      "type": "text",
      "label": "Card 1 Title",
      "id": "title1"
    },
    {
      "type": "textarea",
      "label": "Card 1 Details",
      "id": "details1"
    },
    {
      "type": "url",
      "label": "Card 1 Button URL",
      "id": "button_url1"
    },
    {
      "type": "text",
      "label": "Card 1 Button Text",
      "id": "button_text1",
      "default": "Shop Now"
    },
    {
      "type": "image_picker",
      "label": "Card 2 Image",
      "id": "image2"
    },
    {
      "type": "text",
      "label": "Card 2 Title",
      "id": "title2"
    },
    {
      "type": "textarea",
      "label": "Card 2 Details",
      "id": "details2"
    },
    {
      "type": "url",
      "label": "Card 2 Button URL",
      "id": "button_url2"
    },
    {
      "type": "text",
      "label": "Card 2 Button Text",
      "id": "button_text2",
      "default": "Shop Now"
    }
    // Add more cards as needed
  ],
  "presets": [
    {
      "name": "Default",
      "category": "Custom"
    }
  ]
}
{% endschema %}


<style>
  .multi-card-section {
    text-align: center;
    padding: 20px;
  }

  .section-title {
    font-size: 24px;
    color: #333;
    margin-bottom: 20px;
  }

  .cards-container {
    display: flex;
    justify-content: space-around;
    flex-wrap: wrap;
  }

  .card {
    width: 300px;
    margin: 15px;
    padding: 15px;
    border: 1px solid #ddd;
    text-align: center;
  }

  .card img {
    max-width: 100%;
    height: auto;
    margin-bottom: 10px;
  }

  .btn {
    display: inline-block;
    padding: 8px 16px;
    margin-top: 10px;
    color: white;
    text-decoration: none;
    cursor: pointer;
    border: none;
    border-radius: 5px;
    transition: background-color 0.3s ease;
    background: rgb(96, 96, 255);
    background: linear-gradient(0deg, rgb(156, 11, 156) 0%, rgb(156, 11, 156) 100%);
  }

  .btn:hover {
    background-color: #45a049;
  }
</style>
