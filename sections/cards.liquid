<!-- sections/offers.liquid -->

{% schema %}
{
  "name": "Offers",
  "settings": [
    {
      "type": "header",
      "content": "Offers Section Settings"
    },
    {
      "type": "text",
      "label": "Section Title",
      "id": "section_title",
      "default": "Special Offers"
    },
    {
      "type": "card",
      "label": "Card",
      "settings": [
        {
          "type": "image_picker",
          "label": "Image",
          "id": "image"
        },
        {
          "type": "text",
          "label": "Title",
          "id": "title"
        },
        {
          "type": "textarea",
          "label": "Details",
          "id": "details"
        },
        {
          "type": "url",
          "label": "Button URL",
          "id": "button_url"
        },
        {
          "type": "text",
          "label": "Button Text",
          "id": "button_text",
          "default": "Shop Now"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Default",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div class="offers-section">
  <h2 class="section-title">{{ section.settings.section_title | default: "Special Offers" }}</h2>

  <div class="cards-container">
    <div class="card">
      <img src="{{ section.settings.image | img_url: 'medium' }}" alt="{{ section.settings.title }}">
      <h3>{{ section.settings.title }}</h3>
      <p>{{ section.settings.details }}</p>
      <a href="{{ section.settings.button_url }}" class="btn">{{ section.settings.button_text }}</a>
    </div>
  </div>
</div>

<style>
  .offers-section {
    text-align: center;
    padding: 20px;
  }

  .section-title {
    font-size: 24px;
    color: #333;
    margin-bottom: 20px;
  }

  .cards-container {
    display: flex;
    justify-content: space-around;
    flex-wrap: wrap;
  }

  .card {
    width: 300px;
    margin: 15px;
    padding: 15px;
    border: 1px solid #ddd;
    text-align: center;
  }

  .card img {
    max-width: 100%;
    height: auto;
    margin-bottom: 10px;
  }

  .btn {
    display: inline-block;
    padding: 8px 16px;
    margin-top: 10px;
    color: white;
    text-decoration: none;
    cursor: pointer;
    border: none;
    border-radius: 5px;
    transition: background-color 0.3s ease;
    background: rgb(96, 96, 255);
    background: linear-gradient(0deg, rgb(156, 11, 156) 0%, rgb(156, 11, 156) 100%);
  }

  .btn:hover {
    background-color: #45a049;
  }
</style>
