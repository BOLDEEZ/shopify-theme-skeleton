{{ 'cards.css' | asset_url | stylesheet_tag }}

<div class="card-section">
  {%- assign card_settings = section.settings.card_settings | json -%}
  <a href="{{ card_settings.link }}" class="card-link">
    <div class="card">
      <img src="{{ card_settings.image | img_url: '500x' }}" alt="{{ card_settings.title }}">
      <h3>{{ card_settings.title }}</h3>
      <p>{{ card_settings.details }}</p>
      <a href="{{ card_settings.link }}" class="btn">{{ card_settings.button_text }}</a>
    </div>
  </a>
</div>

{% schema %}
{
  "name": "Single Card Section",
  "settings": [
    {
      "type": "group",
      "label": "Card Settings",
      "id": "card_settings",
      "fields": [
        {
          "type": "text",
          "label": "Title",
          "id": "title",
          "default": "25% Off"
        },
        {
          "type": "image_picker",
          "label": "Image",
          "id": "image",
          "default": "placeholder-image.jpg"
        },
        {
          "type": "textarea",
          "label": "Details",
          "id": "details",
          "default": "Use code: SAVE25"
        },
        {
          "type": "url",
          "label": "Link",
          "id": "link",
          "default": "/collections/all?discount=SAVE25"
        },
        {
          "type": "text",
          "label": "Button Text",
          "id": "button_text",
          "default": "Shop Now"
        }
      ]
    }
  ],
  "presets": [
    {
      "category": "Custom",
      "name": "Single Card Section"
    }
  ]
}
{% endschema %}
