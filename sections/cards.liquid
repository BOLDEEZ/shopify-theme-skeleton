{{ 'cards.css' | asset_url | stylesheet_tag }}
<div class="section-container">
    <div class="section-title">Offers</div>
</div>

</div>
{% for block in section.blocks %}
  <div class="card-section">
    <a href="{{ block.settings.card_link }}" class="card-link">
      <div class="card">
        <img src="{{ block.settings.card_image | img_url: '300x300' }}" alt="{{ block.settings.card_title }}">
        <h3>{{ block.settings.card_title }}</h3>
        <p>{{ block.settings.card_details }}</p>
        <a href="{{ block.settings.card_link }}" class="btn">{{ block.settings.card_button_text }}</a>
      </div>
    </a>
  </div>
{% endfor %}

{% schema %}
{
  "name": "Card Section",
  "blocks": [
    {
      "type": "card_block",
      "name": "Card",
      "settings": [
        {
          "type": "text",
          "label": "Card Title",
          "id": "card_title",
          "default": "25% Off"
        },
        {
          "type": "textarea",
          "label": "Card Details",
          "id": "card_details",
          "default": "Use code: SAVE25"
        },
        {
          "type": "text",
          "label": "Card Link",
          "id": "card_link",
          "default": "/collections/all?discount=SAVE25"
        },
        {
          "type": "text",
          "label": "Card Button Text",
          "id": "card_button_text",
          "default": "Shop Now"
        },
        {
          "type": "image_picker",
          "label": "Card Image",
          "id": "card_image",
          "info": "Select an image for the card"
        }
      ]
    }
  ],
  "presets": [
    {
      "category": "Custom",
      "name": "Card Section"
    }
  ]
}
{% endschema %}