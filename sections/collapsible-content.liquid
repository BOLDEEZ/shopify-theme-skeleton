{{ 'dev_collapsible-content.css' | asset_url | stylesheet_tag }}

<div class="collapsible-content">
  <button onclick="clickButton"> Click Me </button>
  <h2>{{ section.settings.title }}</h2>
  {% for block in section.blocks %}
    <div class="collapsible-item" id="collapse">
      <div class="collapsible-header">
        <button class="collapsible-toggle" onclick="collapseButton()">
          <span class="toggle-icon">
            {% render 'icon-caret' %}
          </span>
        </button>
      </div>
      <div class="collapsible-body">
        <div>
          <h3>{{ block.settings.block_title }}</h3>
          <p>{{ block.settings.block_content }}</p>
        </div>
      </div>
    </div>
  {% endfor %}
</div>

<script>

  function clickButton(){
    console.log("Clicked Button")
  }

  function collapseButton() {
    // var collapsible = button.parentElement.nextElementSibling;
    // body.classList.toggle("active");

    console.log("Clicked collapse")

    var collapsible = document.getElementById("collapse");
    collapsible.classList.toggle("active");

    //var navbar = document.getElementById("navbar");
  }

</script>

{% schema %}
{
  "name": "Collapsible Content",
  "class": "collapsible-content",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Collapsible Section Title",
      "default": "Collapsible Section"
    }
  ],
  "blocks": [
    {
      "type": "block",
      "name": "Content Block",
      "settings": [
        {
          "type": "text",
          "id": "block_title",
          "label": "Block Title",
          "default": "Title"
        },
        {
          "type": "text",
          "id": "block_content",
          "label": "Block Content",
          "default": "Content"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Collapsible Content Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}
