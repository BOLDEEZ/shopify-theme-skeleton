<section class="body-font relative text-gray-600">
  <div class="absolute inset-0 bg-gray-300">
    <iframe width="100%" height="100%" frameborder="0" marginheight="0" marginwidth="0" title="map" scrolling="no" src="https://maps.google.com/maps?width=100%&height=600&hl=en&q={{ section.settings.map_address }}&ie=UTF8&t={{ section.settings.default_map_type }}&z={{ section.settings.default_zoom }}&iwloc=B&output=embed"></iframe>
  </div>
  <div class="container mx-auto flex px-5 py-24">
    <div class="relative flex flex-wrap rounded bg-white py-6 shadow-md mt-[100px]">
      <div class="px-6 lg:w-1/2">
        <h2 class="title-font text-xs font-semibold tracking-widest text-gray-900">{{ section.settings.map_address_heading }}</h2>
        <p class="mt-1 flex">{{ section.settings.map_address }}</p>
      </div>
      <div class="mt-4 px-6 lg:mt-0 lg:w-1/2">
        <h2 class="title-font text-xs font-semibold tracking-widest text-gray-900">{{ section.settings.email_address_heading }}</h2>
        <a class="leading-relaxed text-indigo-500">{{ section.settings.email_address }}</a>
        <h2 class="title-font mt-4 text-xs font-semibold tracking-widest text-gray-900">{{ section.settings.phone_number_heading }}</h2>
        <p class="leading-relaxed">{{ section.settings.phone_number }}</p>
      </div>
    </div>
  </div>
</section>


{% schema %}
{
  "name": "Google Map Integration",
  "settings": [
    {
      "type": "text",
      "id": "map_address_heading",
      "label": "Address Heading",
      "default": "ADDRESS"
    },
    {
      "type": "text",
      "id": "map_address",
      "label": "Address",
      "default": "Rooigemlaan 532  9000 Ghent, Belgium"
    },
    {
      "type": "text",
      "id": "email_address_heading",
      "label": "Email Heading",
      "default": "EMAIL"
    },
    {
      "type": "text",
      "id": "email_address",
      "label": "Enter your Email",
      "default": "example@email.com"
    },
    {
      "type": "text",
      "id": "phone_number_heading",
      "label": "Phone Number Heading",
      "default": "PHONE"
    },
    {
      "type": "text",
      "id": "phone_number",
      "label": "Phone Number",
      "default": "123-456-7890"
    },
    {
      "type": "range",
      "id": "default_zoom",
      "label": "Default Zoom Level",
      "min": 1,
      "max": 20,
      "step": 1,
      "default": 14
    },
    {
      "type": "select",
      "id": "default_map_type",
      "label": "Default Map Type",
      "options": [
        {
          "value": "",
          "label": "Map"
        },
        {
          "value": "k",
          "label": "Satellite"
        },
        {
          "value": "h",
          "label": "Hybrid"
        },
        {
          "value": "p",
          "label": "Terrain"
        }
      ],
      "default": "k"
    },
    {
      "type": "header",
      "content": "Tailwind Styling"
    }
  ],
  "presets": [
    {
      "category": "Custom",
      "name": "Google Map Integration"
    }
  ]
}
{% endschema %}
