<div class="video-text-container">
  <div class="video-container">
    <iframe
      width="100%"
      height="100%"
      src="{{ section.settings.video_source_url }}"
      frameborder="0"
      allowfullscreen
    ></iframe>
  </div>

  <div class="text-container">
    <div>
      <h2>{{ section.blocks[1].settings.heading_1 }}</h2>
      <h2>{{ section.blocks[1].settings.heading_2 }}</h2>
      <div>
        <p>{{ section.blocks[1].settings.paragraph }}</p>
      </div>
      <a href="/pages/over-yummygums">{{ section.blocks[1].settings.link_text }}</a>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Video Text Section",
  "class": "video-text-section",
  "blocks": [
    {
      "type": "video-url",
      "name": "Embed Video",
      "settings": [
        {
          "type": "text",
          "label": "Section Title",
          "id": "section_title",
          "default": "Featured Video"
        },
        {
          "type": "text",
          "label": "Video Source URL",
          "id": "video_source_url",
          "placeholder": "Enter the URL or embed code for your video"
        }
      ]
    },
    {
      "type": "richtext",
      "name": "Text Content",
      "settings": [
        {
          "type": "textarea",
          "id": "heading_1",
          "label": "Heading 1",
          "placeholder": "Enter your text content here"
        },
        {
          "type": "textarea",
          "id": "heading_2",
          "label": "Heading 2",
          "placeholder": "Enter your text content here"
        },
        {
          "type": "textarea",
          "id": "paragraph",
          "label": "Paragraph",
          "placeholder": "Enter your text content here"
        },
        {
          "type": "textarea",
          "id": "link_text",
          "label": "Link Text",
          "placeholder": "Enter your text content here"
        }
      ]
    },
    {}
  ],
  "presets": [
    {
      "name": "video-text-section",
      "category": "Custom"
    }
  ]
}
{% endschema %}
